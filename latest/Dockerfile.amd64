FROM alpine:3.17@sha256:69665d02cb32192e52e07644d76bc6f25abeb5410edc1c7a81a10ba3f0efb90a

LABEL maintainer="ownCloud DevOps <devops@owncloud.com>"
LABEL org.opencontainers.image.authors="ownCloud DevOps <devops@owncloud.com>"
LABEL org.opencontainers.image.title="ownCloud CI Transifex"
LABEL org.opencontainers.image.url="https://github.com/owncloud-ci/transifex"
LABEL org.opencontainers.image.source="https://github.com/owncloud-ci/transifex"
LABEL org.opencontainers.image.documentation="https://github.com/owncloud-ci/transifex"

ARG BUILD_VERSION

# renovate: datasource=github-releases depName=transifex/cli
ENV TRANSIFEX_VERSION="${BUILD_VERSION:-v1.6.5}"

RUN apk --update add --no-cache git-core perl gettext liblocale-po-perl liblocale-gettext-perl curl && \
    curl -SsfL "https://github.com/transifex/cli/releases/download/v${TRANSIFEX_VERSION}/tx-linux-amd64.tar.gz" | tar xz -C /usr/local/bin tx && \
    chmod 755 /usr/local/bin/tx && \
    rm -rf /var/cache/apk/* && \
    rm -rf /tmp/*

COPY rootfs /

ENTRYPOINT ["/usr/local/bin/tx"]
